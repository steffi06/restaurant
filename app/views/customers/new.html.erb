<h1> New Customer </h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for (@customer) do |f| %>
		
		<%= f.label :last_name, "Last Name:" %>
		<%= f.text_field :last_name %>
	
		<br>
		
		<%= f.label :first_name, "First Name:" %>
		<%= f.text_field :first_name %>
		
		<br>
		<br>

		<%= f.submit "Create New Customer"%>
	
	<% end %>
  </div>
</div>